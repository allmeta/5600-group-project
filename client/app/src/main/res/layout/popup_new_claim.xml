<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="20dp"
    >
    <TextView
        android:id="@+id/claim_des_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Claim description:"
        android:layout_alignParentTop="true"
        />
    <EditText
        android:background="@color/colorWhite"
        android:id="@+id/claim_des_et"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/claim_des_tv"
        />
    <ImageView
        android:id="@+id/claim_iv"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_toRightOf="@id/take_photo_button"
        android:layout_below="@id/claim_des_et"/>
    <Button
        android:id="@+id/take_photo_button"
        android:text="Take photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/claim_des_et"
        android:onClick="openCamera"
        />

    <Button
        android:id="@+id/barnehager_knapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add claim"
        android:layout_alignParentBottom="true"
        android:onClick="addClaim"
        />


</RelativeLayout>